@using Ashlynn.UI
@{
    ViewBag.Title = UIConfig.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@UIConfig.Title</h2>
<div>
    <div style="padding: 0.2em">
        <a id="add-entry-button" href="@Url.Action("Index", "Add")">Add Entry</a>
        <button id="recent-button" type="button">Recent</button>
        <a id="bin-button" href="@Url.Action("Index", "RecycleBin")">Bin</a>
    </div>
    <div style="padding: 0.2em">
        <input style="display:block;width: 50%;margin-left: auto;margin-right: auto" id="search-textbox" />
    </div>
    <div style="padding: 0.2em">
        <button id="search-button" type="submit" style="display:block;margin-left: auto;margin-right: auto" >Search</button>
    </div>
    <div id="search-result-div">
    </div>
</div>
<div id="dialog"><textarea style="height: 100%; width: 100%" ></textarea></div>
<script src="@Url.Content("~/Scripts/Ashlynn/Home.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        ASHLYNN.home.ready();
    });
</script>
